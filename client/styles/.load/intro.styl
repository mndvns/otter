
#intro
  position absolute
  text-align center
  shadow = inset 0 100px 500px -51px rgba(255,255,255, 0.3)
  width 100%
  .body
    margin-bottom 50px
    div
      width 500px
      height 124px
      background-image url("/connected-logo-big.png")
      background-size contain
      background-repeat no-repeat
      background-position 0 50%
      margin 0 auto
    h3
      max-width 700px
      display block
      margin 0 auto
  footer
    width 100%
    text-align center
    display block
    margin 0 auto
    float none

    button
    h4
    div
      display inline-block
      margin-bottom 0
      margin-top 0
      height 38px
    h4
      margin 0 20px
    button
      height 100%
      box-shadow shadow

